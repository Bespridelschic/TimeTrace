<Page
	x:Class="TimeTrace.View.MainView.PersonalMapsCreatePages.CategorySelectPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:media="using:Windows.UI.Xaml.Media"
	mc:Ignorable="d">

	<Page.Resources>
		<Style x:Key="BtnStyle" TargetType="Button">
			<Setter Property="Width" Value="150" />
			<Setter Property="Height" Value="150" />
			<Setter Property="Margin" Value="1.5" />
			<Setter Property="Background" Value="White" />
			<Setter Property="BorderThickness" Value="2" />
			<Setter Property="BorderBrush" Value="Red" />
			<Setter Property="UseSystemFocusVisuals" Value="True" />
			<Setter Property="FocusVisualMargin" Value="-3" />
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<StackPanel>
							<PersonPicture
								Width="70"
								Height="70"
								Margin="10,0,0,0"
								HorizontalAlignment="Center"
								VerticalAlignment="Top"
								Initials="Sport" />
							<TextBlock
								HorizontalAlignment="Center"
								FontSize="20"
								Text="Спорт" />
							<TextBlock
								HorizontalAlignment="Center"
								FontSize="15"
								Foreground="SlateGray"
								Text="Спорт" />
						</StackPanel>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<media:AcrylicBrush
			x:Key="HostBackdropBrush"
			BackgroundSource="HostBackdrop"
			FallbackColor="LightSkyBlue"
			TintColor="LightBlue"
			TintOpacity="0.6" />
	</Page.Resources>

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<Grid>

			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>

			<TextBlock
				Margin="20,20,20,10"
				HorizontalAlignment="Center"
				VerticalAlignment="Top"
				FontSize="35"
				Text="Список категорий"
				TextWrapping="WrapWholeWords" />

			<MenuFlyoutSeparator Grid.Row="1" VerticalAlignment="Bottom" />

		</Grid>

		<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
			<VariableSizedWrapGrid
				Margin="50,20"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Orientation="Horizontal">

				<Button Click="{x:Bind ViewModel.CategorySelect}" Style="{StaticResource BtnStyle}" />
				<Button Click="{x:Bind ViewModel.CategorySelect}" Style="{StaticResource BtnStyle}" />
				<Button Style="{StaticResource BtnStyle}" />
				<Button Style="{StaticResource BtnStyle}" />
				<Button Style="{StaticResource BtnStyle}" />

				<Button
					Width="150"
					Height="150"
					Background="White"
					BorderBrush="Green"
					BorderThickness="2"
					Foreground="Black">
					<StackPanel>
						<PersonPicture
							Width="70"
							Height="70"
							Margin="10,0,0,0"
							HorizontalAlignment="Center"
							VerticalAlignment="Top"
							Background="White"
							Initials="Work" />
						<TextBlock
							HorizontalAlignment="Center"
							FontSize="20"
							Text="Работа" />
						<TextBlock
							HorizontalAlignment="Center"
							FontSize="15"
							Foreground="SlateGray"
							Text="Спорт" />
					</StackPanel>
				</Button>

			</VariableSizedWrapGrid>
		</ScrollViewer>

		<CommandBar Grid.Row="2" VerticalAlignment="Bottom">
			<CommandBar.Content>
				<StackPanel Margin="10,-5" Orientation="Horizontal">
					<TextBlock Text="Поиск по категориям: " />
					<AutoSuggestBox
						Width="250"
						Margin="10,13,10,10"
						PlaceholderText="Поиск..."
						QueryIcon="Find" />
				</StackPanel>

			</CommandBar.Content>

			<AppBarButton
				Click="{x:Bind ViewModel.CategoryCreate}"
				Icon="Add"
				Label="Добавить"
				ToolTipService.ToolTip="Создать новую категорию или событие" />
			<AppBarButton
				Icon="Remove"
				Label="Удалить"
				ToolTipService.ToolTip="Удалить выбранную категорию или событие" />
			<AppBarSeparator />
			<AppBarButton
				Icon="Edit"
				Label="Изменить"
				ToolTipService.ToolTip="Редактировать выбранную категорию или событие событий" />
		</CommandBar>

	</Grid>
</Page>



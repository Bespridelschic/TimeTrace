<Page
    x:Class="TimeTrace.View.MainView.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Page.Resources>
		<ResourceDictionary>
			<Style TargetType="StackPanel">
				<Setter Property="Transitions">
					<Setter.Value>
						<TransitionCollection>
							<EntranceThemeTransition/>
						</TransitionCollection>
					</Setter.Value>
				</Setter>
			</Style>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/ResourceDictionaries/MainDictionary.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Page.Resources>

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
			
			<PersonPicture HorizontalAlignment="Center" Margin="0, 20, 0, 5" Width="200" Height="200"/>

			<StackPanel Orientation="Horizontal" Margin="0, 0, 0, 20" HorizontalAlignment="Center">
				<TextBlock Text="Добро пожаловать, " FontSize="25" Foreground="SteelBlue" />
				<TextBlock Text="{x:Bind ViewModel.UserName, Mode=OneWay}" FontSize="25" Foreground="SteelBlue" />
				<TextBlock Text="!" FontSize="25" Foreground="SteelBlue" />
			</StackPanel>
			

			<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="SteelBlue" BorderThickness="1">
				<TextBlock Text="Полезное для вас" Foreground="SteelBlue" FontSize="20"/>

				<VariableSizedWrapGrid Orientation="Horizontal">
					<Button Foreground="White" Background="SteelBlue" Content="Расписание" Width="120" Margin="20"/>
					<Button Foreground="White" Background="SteelBlue" Content="К картам" Width="120" Margin="20"/>
					<Button Foreground="White" Background="SteelBlue" Content="К настройкам" Width="120" Margin="20"/>
					<Button Foreground="White" Background="SteelBlue" Content="Помощь" Width="120" Margin="20"/>
				</VariableSizedWrapGrid>

			</StackPanel>

			<StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
				<TextBlock Text="Личная статистика" FontSize="20" Margin="0, 0, 0, 20"/>

				<VariableSizedWrapGrid Orientation="Horizontal">
					<StackPanel Orientation="Horizontal" Margin="15" HorizontalAlignment="Center">
						<TextBlock Text="Создано карт: " FontSize="15"/>
						<TextBlock Text="{x:Bind ViewModel.NumEvents, Mode=OneWay}" FontSize="15"/>
					</StackPanel>
					<StackPanel Orientation="Horizontal" Margin="15" HorizontalAlignment="Center">
						<TextBlock Text="Контактов: " FontSize="15"/>
						<TextBlock Text="{x:Bind ViewModel.NumContacts, Mode=OneWay}" FontSize="15"/>
					</StackPanel>
					<StackPanel Orientation="Horizontal" Margin="15" HorizontalAlignment="Center">
						<TextBlock Text="Общий стаж: " FontSize="15"/>
						<TextBlock Text="{x:Bind ViewModel.Experience, Mode=OneWay}" FontSize="15"/>
					</StackPanel>
				</VariableSizedWrapGrid>
				
			</StackPanel>
			
		</StackPanel>
	</ScrollViewer>
</Page>
